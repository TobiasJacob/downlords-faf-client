<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXSpinner?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="replayVaultRoot" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.faforever.client.replay.OnlineReplayVaultController">
    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <content>
                <VBox fx:id="contentPane" spacing="10.0">
                    <children>
                        <fx:include fx:id="search" source="../search/search.fxml" />
                        <Separator maxWidth="1.7976931348623157E308" />
                        <HBox spacing="10.0">
                            <children>
                                <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClicked" text="%back">
                                    <graphic>
                                        <Region styleClass="icon,back-icon" />
                                    </graphic>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#onRefreshButtonClicked" text="%refresh">
                                    <graphic>
                                        <Region styleClass="icon,refresh-icon" />
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                          <VBox fx:id="showroomGroup" alignment="CENTER" spacing="10.0">
                             <children>
                                 <Label prefWidth="${showroomGroup.width}" styleClass="h2" text="%vault.replays.ownReplays" />
                                 <VBox fx:id="ownReplaysPane" spacing="10.0" />
                                 <Button mnemonicParsing="false" onAction="#onMoreOwnButtonClicked" text="%more" />
                                 <Label prefWidth="${showroomGroup.width}" styleClass="h2" text="%vault.replays.newest" />
                                 <VBox fx:id="newestPane" spacing="10.0" />
                                 <Button mnemonicParsing="false" onAction="#onMoreNewestButtonClicked" text="%more" />
                                 <Label prefWidth="${showroomGroup.width}" styleClass="h2" text="%vault.replays.highestRated" />
                                 <VBox fx:id="highestRatedPane" spacing="10.0" />
                                 <Button mnemonicParsing="false" onAction="#onMoreHighestRatedButtonClicked" text="%more" />
                             </children>
                          </VBox>
                        <VBox fx:id="searchResultGroup" spacing="10.0">
                            <children>
                                <Label styleClass="h2" text="%searchResult" />
                                <VBox fx:id="searchResultPane" spacing="10.0" />
                                <Button fx:id="moreButton" mnemonicParsing="false" onAction="#onLoadMoreButtonClicked" text="%vault.more" />
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
        <VBox fx:id="loadingPane" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mouseTransparent="true" spacing="10.0">
            <children>
                <Label contentDisplay="TOP" text="%vault.replays.loading">
                    <graphic>
                        <JFXSpinner />
                    </graphic>
                </Label>
            </children>
        </VBox>
    </children>
</StackPane>
